<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <EditText
            android:id="@+id/titipBarang_entry_jenis"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:hint="Jenis barang"
            android:textColor="@color/tekslogindaftar"
            android:inputType="textEmailAddress"
            android:ems="7"/>

        <EditText
            android:id="@+id/titipBarang_entry_jumlah"
            android:layout_toRightOf="@id/titipBarang_entry_jenis"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:hint="Jumlah"
            android:textColor="@color/tekslogindaftar"
            android:inputType="number"
            android:ems="4"/>

    <Button
        android:id="@+id/titipBarang_entry_hapus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:text="Hapus"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/baru_coklatkemerahan"
        android:drawableStart="@drawable/hapus"
        android:textColor="@color/baru_putih"
        android:background="@drawable/tombol"/>
</RelativeLayout>