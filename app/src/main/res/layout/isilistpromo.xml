<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/isilist_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/pastel_pink"
    app:cardCornerRadius="10dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:weightSum="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/isilist_namapaket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="Paket 1"
                android:textColor="@color/baru_putih"
                android:textSize="20sp"
                android:fontFamily="@font/sofia_pro_black_az"/>

            <TextView
                android:id="@+id/isilist_deskripsipaket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="2 Kendaraan, 1 kasur, 1 pasang sepatu, 20 set pakaian, jasa service / laundry"
                android:textColor="@color/baru_putih"
                android:fontFamily="@font/sofia_pro_medium_az"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/isilist_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Dp : Rp. 50 000"
                android:textColor="@color/baru_putih"
                android:textSize="17sp"
                android:fontFamily="@font/sofia_pro_light_az"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/isilist_gbr"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:src="@drawable/news" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>