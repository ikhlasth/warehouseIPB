<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/coklatilang"
    android:layout_gravity="center"
    android:fitsSystemWindows="true"
    android:paddingBottom="20dp"
    android:gravity="center_vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/transparan"/>

    <LinearLayout
        android:id="@+id/llmasuk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textinput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="55dp"
                android:hint="Nama pengguna"
                android:textColor="@color/ijogelapbgt"
                android:inputType="textEmailAddress"
                android:ems="10"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/pas"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/ijogelapbgt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="55dp"
                android:hint="Kata sandi"
                android:textColor="@color/ijogelapbgt"
                android:paddingEnd="15dp"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/masuk_frg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/tombol"
            android:textColor="@color/coklatilang"
            android:text="Masuk"/>

    </LinearLayout>

</FrameLayout>