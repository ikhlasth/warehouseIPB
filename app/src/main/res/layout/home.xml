<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/coklatilang"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Fragment.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ijogelap"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="@string/belum_nitip"/>
    <Button
        android:id="@+id/home_tb_titip"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/tombol"
        android:textColor="@color/coklatilang"
        android:text="Titip sekarang!"/>
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/kotak"
        app:itemIconTint="@drawable/nav_check"
        app:itemTextColor="@drawable/nav_check"
        app:menu="@menu/menuutama"/>
</FrameLayout>